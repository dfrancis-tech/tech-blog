<article class="post">
  <div class="title">
    <a href="/post/{{id}}" target="_blank">{{blog_title}}</a>
    <span>created by {{user.username}} on {{format_date created_at}}</span>
  </div>
  <div class="meta">
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>